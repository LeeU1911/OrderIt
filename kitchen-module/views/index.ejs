<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <title>
        <%= title %>
    </title>
    <meta name="description" content="OrderIt,order food and beverages using apps">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <link rel="canonical" href="http://orderit.dinogroup.vn"/>
    <link rel="alternate" href="orderit.dinogroup.vn" hreflang="en-us"/>
    <link rel="stylesheet" href="/stylesheets/reset.css"> <!-- CSS reset -->
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/stylesheets/login.css">
    <script src="/javascripts/modernizr.js"></script> <!-- Modernizr -->
</head>
<body ng-controller="myController">
<header>
    <h1>Order-It Kitchen</h1>
    <p>
        <a href="https://github.com/LeeU1911/OrderIt">Star us on GitHub</a>
    </p>
</header>
<main class="main">
    <p class="button">
        <a class="cd-signup" href="#0">Register</a>
    </p>
    <p class="button">
        <a class="cd-signin" href="#0">Login</a>
    </p>

    <div class="cd-user-modal"> <!-- this is the entire modal form, including the background -->
        <div class="cd-user-modal-container"> <!-- this is the container wrapper -->
            <ul class="cd-switcher">
                <li><a href="#0">Sign in</a></li>
                <li><a href="#0">New account</a></li>
            </ul>

            <div id="cd-login"> <!-- log in form -->
                <form class="cd-form" name="loginForm" novalidate>
                    <p class="fieldset">
                        <label class="image-replace cd-email" for="signin-email">E-mail</label>
                        <input class="full-width has-padding has-border" id="signin-email" type="email" name="email"
                               placeholder="E-mail" ng-model="loginUserWithEmailAndPassword.email"
                               ng-class="{ 'has-error': loginForm.email.$touched && loginForm.email.$invalid}"
                               required>
                        <div class="help-block" ng-messages="loginForm.email.$error" ng-show="loginForm.email.$touched">
                            <div ng-messages-include="/html/messages.html"></div>
                        </div>
                    </p>

                    <p class="fieldset">
                        <label class="image-replace cd-password" for="signin-password">Password</label>
                        <input class="full-width has-padding has-border" id="signin-password" type="password" name="password"
                               placeholder="Password" ng-model="loginUserWithEmailAndPassword.password"
                               ng-class="{ 'has-error': loginForm.password.$touched && loginForm.password.$invalid}"
                               ng-minlength="6"
                               required>
                        <a href="#0" class="hide-password">Show</a>
                        <div class="help-block" ng-messages="loginForm.password.$error" ng-show="loginForm.password.$touched">
                            <div ng-messages-include="/html/messages.html"></div>
                        </div>
                    </p>

                    <p class="fieldset">
                        <input type="checkbox" id="remember-me" checked>
                        <label for="remember-me">Remember me</label>
                    </p>

                    <p class="fieldset">
                        <input class="full-width" type="submit" value="Login" ng-click="login()">
                    </p>
                </form>

                <p class="cd-form-bottom-message"><a href="#0">Forgot your password?</a></p>
                <!-- <a href="#0" class="cd-close-form">Close</a> -->
            </div> <!-- cd-login -->

            <div id="cd-signup"> <!-- sign up form -->
                <form class="cd-form" name="registerForm" novalidate>
                    <p class="fieldset">
                        <label class="image-replace cd-username" for="signup-username">Username</label>
                        <input class="full-width has-padding has-border" id="signup-username" type="text"
                               placeholder="Username" ng-model="userWithEmailAndPassword.username">
                    </p>

                    <p class="fieldset">
                        <label class="image-replace cd-email" for="signup-email">E-mail</label>
                        <input class="full-width has-padding has-border" id="signup-email" type="email" name="email"
                               placeholder="E-mail" ng-model="userWithEmailAndPassword.email"
                               ng-class="{ 'has-error': registerForm.email.$touched && registerForm.email.$invalid}"
                               required>
                        <div class="help-block" ng-messages="registerForm.email.$error" ng-show="registerForm.email.$touched">
                            <div ng-messages-include="/html/messages.html"></div>
                        </div>
                    </p>

                    <p class="fieldset">
                        <label class="image-replace cd-password" for="signup-password">Password</label>
                        <input class="full-width has-padding has-border" id="signup-password" type="password" name="password"
                               placeholder="Password" ng-model="userWithEmailAndPassword.password"
                               ng-class="{ 'has-error': registerForm.password.$touched && registerForm.password.$invalid}"
                               ng-minlength="6"
                               required>
                        <a href="#0" class="hide-password">Show</a>
                        <div class="help-block" ng-messages="registerForm.password.$error" ng-show="registerForm.password.$touched">
                            <div ng-messages-include="/html/messages.html"></div>
                        </div>
                    </p>

                    <p class="fieldset">
                        <input type="checkbox" id="accept-terms">
                        <label for="accept-terms">I agree to the <a href="#0">Terms</a></label>
                    </p>

                    <p class="fieldset">
                        <input class="full-width has-padding" type="submit" value="Create account" ng-click="register(registerForm.$valid)">
                    </p>
                </form>

                <!-- <a href="#0" class="cd-close-form">Close</a> -->
            </div> <!-- cd-signup -->

            <div id="cd-reset-password"> <!-- reset password form -->
                <p class="cd-form-message">Lost your password? Please enter your email address. You will receive a link
                    to create a new password.</p>

                <form class="cd-form">
                    <p class="fieldset">
                        <label class="image-replace cd-email" for="reset-email">E-mail</label>
                        <input class="full-width has-padding has-border" id="reset-email" type="email"
                               placeholder="E-mail">
                        <span class="cd-error-message">Error message here!</span>
                    </p>

                    <p class="fieldset">
                        <input class="full-width has-padding" type="submit" value="Reset password">
                    </p>
                </form>

                <p class="cd-form-bottom-message"><a href="#0">Back to log-in</a></p>
            </div> <!-- cd-reset-password -->
            <a href="#0" class="cd-close-form">Close</a>
        </div> <!-- cd-user-modal-container -->
    </div> <!-- cd-user-modal -->
</main>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="/javascripts/login.js"></script> <!-- Gem jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.1/angular.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.1/angular-resource.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.1/angular-messages.min.js"></script>
<script src="/javascripts/my-app.js"></script>
<script src="/javascripts/my-service.js"></script>
<script src="/javascripts/my-controller.js"></script>
</body>
</html>
				