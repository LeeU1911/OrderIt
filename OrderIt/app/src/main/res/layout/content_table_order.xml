<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.TableOrderActivity"
    tools:showIn="@layout/activity_table_order"
    android:id="@+id/tableOrder"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="5"
        android:id="@+id/orderDetails"
        android:layout_alignParentTop="true"
        android:useDefaultMargins="true">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/table_number"
            android:id="@+id/tbl_nbr_lbl"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/tbl_nbr_txt"/>
        <Space  android:layout_gravity="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/order_id"
            android:id="@+id/order_id_lbl"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="109"
            android:id="@+id/order_id_txt"/>


    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderItemsHeader"
        android:layout_below="@id/orderDetails"
        android:columnCount="8"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:useDefaultMargins="true"
        android:scrollbars="vertical">
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/no"
            android:id="@+id/item_no_lbl"
            android:layout_width="wrap_content"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/code"
            android:id="@+id/item_code_lbl"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_width="60dp"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/item"
            android:id="@+id/item_name_lbl"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_width="120dp"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/quantity"
            android:id="@+id/item_quantity_lbl"
            android:layout_width="wrap_content" />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cancel"
            android:id="@+id/item_cancel_lbl"
            android:layout_gravity="center"
            android:layout_width="wrap_content" />

    </GridLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/orderItems"
            android:columnCount="8"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:useDefaultMargins="true">


        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:id="@+id/bottom_btn">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_btn"
            android:id="@+id/order_btn"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_btn"
            android:id="@+id/pay_btn"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_btn"
            android:id="@+id/reset_btn"
            android:layout_gravity="bottom"
            />
    </LinearLayout>


</LinearLayout>
