<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="orderit.mainapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.AppProcess"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashScreenActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.TableListActivity"
            android:parentActivityName=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.TableStatusActivity"
            android:parentActivityName=".activity.TableListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.TableListActivity" />
        </activity>
        <activity android:name=".activity.NewTableOrderActivity"
            android:parentActivityName=".activity.TableStatusActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.TableStatusActivity" /></activity>
        <activity android:name=".activity.BillManagementActivity"
            android:parentActivityName=".activity.TableStatusActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.TableStatusActivity" />
        </activity>
    </application>

</manifest>
