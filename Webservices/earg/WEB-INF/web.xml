    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>net.pedge.wservice.restapi.RestAuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping> -->
<!-- End of rest web service -->
</web-app>
